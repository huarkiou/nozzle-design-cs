<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GuiApp.ViewModels"
             xmlns:scottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
             xmlns:view="clr-namespace:GuiApp.Views"
             x:DataType="vm:OtnControlViewModel"
             mc:Ignorable="d" d:DesignWidth="1072" d:DesignHeight="603"
             x:Class="GuiApp.Views.OtnControl">
    <Design.DataContext>
        <vm:OtnControlViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*">
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <CheckBox Name="IsAdvanced" Content="进阶选项" IsChecked="False" Foreground="Blue" />
                <Button Name="OtnRun" Margin="10" Width="180" Height="32"
                        Click="OtnRun_OnClick" Content="开始计算"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            </StackPanel>
            <Separator DockPanel.Dock="Bottom" Margin="0,10,0,0" />
            <ScrollViewer>
                <StackPanel DockPanel.Dock="Top" Orientation="Vertical"
                            VerticalAlignment="Top" HorizontalAlignment="Center"
                            Margin="0,15,15,15" Spacing="5">
                    <view:BinarySelector Name="IsAxisymmetric" LabelTrue="轴对称" LabelFalse="二维"
                                         IsTrue="{Binding IsAxisymmetric}" />
                    <view:LabeledInput Label="深度/宽度：" Input="{Binding Width}"
                                       IsVisible="{Binding !#IsAxisymmetric.IsTrue}" />
                    <view:LabeledInput Label="进口高度：" Input="{Binding InletHeight}" />
                    <view:LabeledInput Label="目标喷管长度：" Input="2" />
                    <view:LabeledInput Label="目标出口高度：" Input="2" />
                    <Separator />
                    <view:LabeledInput Label="平均比热比：" Input="2" />
                    <view:LabeledInput Label="气体常数：" Input="2" />
                    <view:LabeledInput Label="进口总压：" Input="2" />
                    <view:LabeledInput Label="进口总温：" Input="2" />
                    <view:LabeledInput Label="进口马赫数：" Input="2" />
                    <view:LabeledInput Label="进口气流角：" Input="0"
                                       IsVisible="{Binding #IsAdvanced.IsChecked}"
                                       Foreground="{Binding #IsAdvanced.Foreground}" />
                    <view:LabeledInput Label="出口背压：" Input="2" />
                    <Separator />
                    <view:LabeledInput Label="过渡圆弧半径：" Input="2" />
                    <view:LabeledInput Label="初始膨胀角：" Input="nan" />
                    <Separator IsVisible="{Binding #IsAdvanced.IsChecked}" />
                    <view:LabeledInput Label="容许误差：" Input="2"
                                       IsVisible="{Binding #IsAdvanced.IsChecked}"
                                       Foreground="{Binding #IsAdvanced.Foreground}" />
                    <view:LabeledInput Label="初始网格点数：" Input="2"
                                       IsVisible="{Binding #IsAdvanced.IsChecked}"
                                       Foreground="{Binding #IsAdvanced.Foreground}" />
                    <view:LabeledInput Label="最大校正步数：" Input="40"
                                       IsVisible="{Binding #IsAdvanced.IsChecked}"
                                       Foreground="{Binding #IsAdvanced.Foreground}" />
                    <view:BinarySelector Name="Irrotational" LabelTrue="无旋" LabelFalse="有旋" IsTrue="True"
                                         IsVisible="{Binding #IsAdvanced.IsChecked}"
                                         Foreground="{Binding #IsAdvanced.Foreground}" />
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
        <scottPlot:AvaPlot Grid.Column="1" Name="Displayer2D" />
    </Grid>
</UserControl>